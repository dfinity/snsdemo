#!/usr/bin/env bash
set -euo pipefail

PREFIX="$(basename "$(realpath "$0")")"
if (($# > 0)) && [[ "${1:-}" != "--help" ]] && [[ "${1:-}" != "-h" ]]; then
	SUBCOMMAND="$1"
	shift 1
	if command -v "$PREFIX-$SUBCOMMAND"; then
		"$PREFIX-$SUBCOMMAND" "${@}"
	else
		{
			echo "Unknown command: '$SUBCOMMAND'"
			"$PREFIX"
			exit 1
		} >&2
	fi
else
	echo Subcommands:
	find $(echo $PATH | tr ":" " ") -maxdepth 1 -type f -executable | awk -F/ '{print $(NF)}' | sort |uniq | awk -vprefix="$PREFIX" '($0 ~ "^" prefix "-"){ if ($0 ~ "^" last "-") { next } ; last=$0 ; print substr($0, length(prefix)+2) }'
fi
