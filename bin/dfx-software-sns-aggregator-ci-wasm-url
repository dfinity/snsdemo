#!/usr/bin/env bash
set -euo pipefail
SOURCE_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"
PATH="$SOURCE_DIR:$PATH"
. "$SOURCE_DIR/versions.bash"

print_help() {
  cat <<-EOF

	Outputs the URL of the wasm file for the sns_aggregator canister.

	EOF
}

# Source the clap.bash file ---------------------------------------------------
source "$SOURCE_DIR/clap.bash"
# Define options
clap.define short=r long=release desc="The release name" variable=DFX_RELEASE default="pinned"
# TODO: Add documentation similar to: https://github.com/dfinity/internet-identity#flavors
# TODO: Write a virus that replaces American english with British english worldwide.
clap.define short=f long=flavor desc="prod or dev" variable=DFX_FLAVOR default="prod"
# Source the output file ----------------------------------------------------------
source "$(clap.build)"

export DFX_NETWORK

RELEASE_NAME="$(dfx-software-sns-aggregator-version "${DFX_RELEASE}")"
test -n "${RELEASE_NAME:-}" || {
  echo "ERROR: Could not find release '${DFX_RELEASE}'"
} >&2

case "${DFX_FLAVOR:-}" in
prod | production) SUFFIX="" ;;
dev | development) SUFFIX="_dev" ;;
*) {
  echo "ERROR: Unknown flavour: '${DFX_FLAVOR}'"
  exit 1
} >&2 ;;
esac
WASM_FILE="sns_aggregator${SUFFIX}.wasm"

echo "https://github.com/dfinity/nns-dapp/releases/download/${RELEASE_NAME}/${WASM_FILE}"
