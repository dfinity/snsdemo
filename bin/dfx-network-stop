#!/usr/bin/env bash
set -euo pipefail
SOURCE_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

# Source the clap.bash file ---------------------------------------------------
source "$SOURCE_DIR/clap.bash"
# Define options
clap.define short=n long=network desc="The dfx network to use" variable=DFX_NETWORK default="local"
# Source the output file ----------------------------------------------------------
source "$(clap.build)"

export DFX_NETWORK

if [[ "$DFX_NETWORK" == "local" ]]; then
  : "Send the equivalent of ctrl-c"
  pgrep --full '\<dfx\>.*\<start\>' | xargs --no-run-if-empty kill || true
  echo "Waiting for replica to stop..."
  for ((i = 100; i > 0; i--)); do
    pgrep replica || break
    printf '\r % 4d' "$i"
    sleep 1
  done
  echo

  : "Make sure that it is dead."
  sleep 1
  pkill -9 dfx || true
  pkill -9 replica || true
  pkill -9 icx-proxy || true
  sleep 1
else
  echo "Not stopping remote network: $DFX_NETWORK"
fi
