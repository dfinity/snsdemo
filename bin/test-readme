#!/usr/bin/env bash
set -euo pipefail

print_help() {
  cat <<-EOF
	Tests the commands in the README.

	Usage: $(basename "$0") [flags]

	Flags:
	--help
	  Prints this help text.

	--dry-run
	  Prints the commands without executing them.

	--ssh)
	  Clones from github via ssh instead of https.
	EOF
}

AUTH=http
modify_auth() {
  case "${AUTH:-}" in
  ssh) sed 's!https://github.com/!git@github.com:!g' ;;
  *) cat ;;
  esac
}

COMMAND=execute_bash
execute_bash() {
  bash -euxo pipefail "${@}"
}

while (($# > 0)); do
  arg="$1"
  shift 1
  case "${arg:-}" in
  --help)
    print_help
    exit 0
    ;;
  --dry-run)
    COMMAND="cat"
    ;;
  --ssh)
    AUTH="ssh"
    ;;
  *)
    {
      echo "ERROR: Unrecognized argument: ${arg:-}"
      exit 1
    } >&2
    ;;
  esac
done

cd "$(dirname "$(realpath "$0")")/.."

if git diff | grep -q .; then
  {
    echo "ERROR: Refusing to test unclean repo."
    exit 1
  } >&2
fi
# We make changes to the README.  Better undo any changes.
function cleanup {
  git checkout README.md
  dfx stop
}
trap cleanup EXIT

command -v dfx || sh -ci "$(curl -fsSL https://internetcomputer.org/install.sh)"

patch -p1 <bin/test-readme.patch
# We really do want backticks.
# shellcheck disable=SC2016
sed <README.md -En '/```bash/,/```/{/```/b;p}' | sed -E '/EOF/,/EOF/b;s/.*/&\nsleep 1/g' | modify_auth >,README.sh

"$COMMAND" ,README.sh
